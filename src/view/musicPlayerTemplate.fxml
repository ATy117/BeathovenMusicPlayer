      <Label fx:id="titleText" layoutX="60.0" layoutY="262.0" maxWidth="200.0" minWidth="200.0" text="No Songs Playing" textAlignment="CENTER" textFill="#e9b350">
         <font>
            <Font name="Comfortaa Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="artistText" layoutX="54.0" layoutY="290.0" maxWidth="200.0" minWidth="200.0" text="by Ed Sheeran" textAlignment="CENTER" textFill="#e9c582">
         <font>
            <Font name="Comfortaa Regular" size="12.0" />
         </font>
      </Label>
      <Label fx:id="albumText" layoutX="53.0" layoutY="306.0" maxWidth="200.0" minWidth="200.0" text="from Album" textAlignment="CENTER" textFill="#e9c582">
         <font>
            <Font name="Comfortaa Regular" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
