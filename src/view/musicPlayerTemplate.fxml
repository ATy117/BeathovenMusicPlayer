<AnchorPane fx:id="songPlayerAnchor" prefHeight="458.0" prefWidth="318.0" style="-fx-background-color: #454444" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Circle fx:id="songPic" fill="#b7b9bc" layoutX="159.0" layoutY="152.0" radius="97.0" stroke="#a19999" strokeType="INSIDE" />
      <Text fx:id="genreText" fill="#8ba0a9" layoutX="244.0" layoutY="17.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hip-Hop">
         <font>
            <Font name="Poppins Regular" size="12.0" />
         </font>
      </Text>
      <JFXButton fx:id="playBtn" layoutX="134.0" layoutY="339.0" onAction="#playPause" textFill="#f1f6f1">
         <font>
            <Font size="18.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="ffBtn" layoutX="216.0" layoutY="339.0" onAction="#nextSong" textFill="#f1f6f1">
         <font>
            <Font size="18.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="rewindBtn" layoutX="34.0" layoutY="339.0" onAction="#prevSong" textFill="#f1f6f1">
         <font>
            <Font size="18.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="shuffleBtn" layoutX="83.0" layoutY="378.0" onAction="#shuffle" textFill="#8ba089" />
      <JFXButton fx:id="repeatBtn" layoutX="188.0" layoutY="378.0" onAction="#repeat" textFill="#8ba089" />
      <JFXSlider fx:id="slider" layoutX="42.0" layoutY="413.0" prefHeight="14.0" prefWidth="242.0" />
      <Label fx:id="timeStamp" layoutX="140.0" layoutY="434.0" text="Label" textFill="#e9c582">
         <font>
            <Font name="Poppins Regular" size="12.0" />
         </font></Label>
      <JFXButton fx:id="volumeDown" layoutX="8.0" layoutY="9.0" onAction="#turnVolumeDown" prefHeight="17.0" prefWidth="20.0" textFill="#8ba089" />
